# Draft file for Protein Pathway Analyzer GUI
# This is a simplified draft version showing basic GUI structure with Tkinter

import tkinter as tk
from tkinter import ttk

class ProteinGUI(tk.Tk):
    def __init__(self):
        super().__init__()
        self.title("Protein Pathway Analyzer - Draft")
        self.geometry("800x600")
        
        self._build_ui()

    def _build_ui(self):
        left = ttk.Frame(self, padding=12)
        left.pack(side=tk.LEFT, fill=tk.Y)

        ttk.Label(left, text="Amino Acid Sequence:").pack(anchor="w")
        self.entry_seq = ttk.Entry(left, width=30)
        self.entry_seq.pack(pady=4)

        ttk.Button(left, text="Build Graph", command=self.on_build_graph).pack(fill=tk.X, pady=6)

        self.status_var = tk.StringVar()
        ttk.Label(left, textvariable=self.status_var).pack(anchor="w", pady=8)

        right = ttk.Frame(self, padding=12)
        right.pack(side=tk.RIGHT, fill=tk.BOTH, expand=True)
        self.canvas = tk.Canvas(right, bg="#f7f9fc")
        self.canvas.pack(fill=tk.BOTH, expand=True)

    def on_build_graph(self):
        seq = self.entry_seq.get()
        self.status_var.set(f"Sequence entered: {seq}")

if __name__ == "__main__":
    app = ProteinGUI()
    app.mainloop()
